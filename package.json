{
  "name": "osc-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for OSC (Open Sound Control) endpoint management",
  "main": "dist/index.js",
  "bin": {
    "osc-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build",
    "version": "npm run build && git add dist/",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "osc",
    "open-sound-control",
    "mcp",
    "model-context-protocol",
    "ai",
    "agent",
    "music",
    "audio"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noodledostuff/simple-osc-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/noodledostuff/simple-osc-mcp/issues"
  },
  "homepage": "https://github.com/noodledostuff/simple-osc-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "audit-ci": "^7.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "jest": "^30.0.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}